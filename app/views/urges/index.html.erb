<p id="notice"><%= notice %></p>

<h1>Urges</h1>

<div class="buttons-box">
  <h5><%= link_to "+ spliff", urges_quick_create_path(urge_for_id: 1), class: "btn btn-lg btn-success" %></h5>
</div> 

<div class="form-box">
  <%= render partial: 'urges/partials/mini_form', locals: {urge: Urge.new} %>
</div>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      
      <th>Urge for</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urges.each do |urge| %>
      <tr>
        <td><%= urge.date %></td>
        <td><%= urge.datetime.strftime("%H:%M:%S %Z") %></td>
        <td><%= UrgeFor.where(id: urge.urge_for_id)[0].urge %></td>
        <td><%= urge.notes %></td>
        <td><%= link_to 'Show', urge %></td>
        <td><%= link_to 'Edit', edit_urge_path(urge) %></td>
        <td><%= link_to 'Destroy', urge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Urge', new_urge_path %>
